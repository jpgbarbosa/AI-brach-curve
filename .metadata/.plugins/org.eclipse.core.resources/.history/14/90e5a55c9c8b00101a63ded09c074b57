        pylab.plot(tP,pointsCurve,label=str(vals[i]))
        pylab.subplot(2,2,2)
        pylab.plot(tM,poinsdPad,label=str(vals[i]))
        pylab.subplot(2,1,2) 
        pylab.plot(tM,pointsMed,label=str(vals[i]))
        
    setPlotLegendAndRealCurve(tM,tP,len(pointsCurve),s)
    
